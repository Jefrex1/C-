#include <iostream>
#include <string>
#include <vector>
#include <algorithm>
using namespace std;

struct Car {
    string brand;
    string licensePlate;
    double mileage;
    string rentalDate;
    double paymentAmount;
    string alarmSystem;
};

// Функція для виводу інформації про автомобіль
void printCar(const Car& car) {
    cout << "Марка: " << car.brand << endl;
    cout << "Державний номер: " << car.licensePlate << endl;
    cout << "Кілометраж пробігу: " << car.mileage << endl;
    cout << "Дата здачі в оренду: " << car.rentalDate << endl;
    cout << "Сума до оплати: " << car.paymentAmount << endl;
    cout << "Сигналізація: " << car.alarmSystem << endl;
    cout << "------------------------" << endl;
}

int main() {
    vector<Car> cars;

    int numCars;
    cout << "Введіть кількість автомобілів: ";
    cin >> numCars;

    // Введення даних про автомобілі у масив
    for (int i = 0; i < numCars; i++) {
        Car car;
        cin.ignore();
        cout << "Введіть марку автомобіля: ";
        getline(std::cin, car.brand);
        cout << "Введіть державний номер: ";
        getline(std::cin, car.licensePlate);
        cout << "Введіть кілометраж пробігу: ";
        cin >> car.mileage;
        cin.ignore();
        cout << "Введіть дату здачі в оренду: ";
        getline(std::cin, car.rentalDate);
        cout << "Введіть суму до оплати: ";
        cin >> car.paymentAmount;
        cin.ignore();
        cout << "Чи є сигналізація (так/ні): ";
        getline(std::cin, car.alarmSystem);
        cars.push_back(car);
    }

    // Сортування за маркою автомобілів
    sort(cars.begin(), cars.end(), [](const Car& a, const Car& b) {
        return a.brand < b.brand;
        });

    // Виведення інформації про всі автомобілі
    cout << "Інформація про всі автомобілі:" << std::endl;
    for (const Car& car : cars) {
        printCar(car);
    }

    // Пошук автомобілів без сигналізації
    string searchBrand;
    cout << "Введіть марку для пошуку автомобілів без сигналізації: ";
    cin >> searchBrand;

    bool found = false;
    for (const Car& car : cars) {
        if (car.brand == searchBrand && car.alarmSystem == "ні") {
            printCar(car);
            found = true;
        }
    }

    if (!found) {
        std::cout << "Автомобілів такої марки без сигналізації не знайдено." << std::endl;
    }

    return 0;
}
